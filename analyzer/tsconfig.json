{
    "compilerOptions": {
        "experimentalDecorators": true,
        "module": "CommonJS",
        "target": "ES2020",
        "outDir": "dist",
        "rootDir": "src",
        "sourceMap": true,
        "strict": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
        "resolveJsonModule": true,
        "moduleResolution": "Node",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
            "cache-decorator": ["../node_modules/cache-decorator/lib/index.d.ts"]
        }
    },
    "exclude": [
        "node_modules",
        "../node_modules",
        "./dist",
        "src/run-test.ts"
    ]
}