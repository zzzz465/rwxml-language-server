{
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "CommonJS",
        "target": "ES2020",
        "outDir": "dist",
        "rootDir": "src",
        "sourceMap": true,
        "strict": true,
        "resolveJsonModule": true,
        "moduleResolution": "Node",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "baseUrl": ".",

        "paths": {
            "cache-decorator": ["node_modules/cache-decorator/lib/index.d.ts"] // https://github.com/brn/cache-decorator
        }
    },
    "exclude": [
        "src/tests"
    ]
}